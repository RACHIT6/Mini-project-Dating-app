<%- layout('/layout/template.ejs') %>
<div class="edit">

    <div class="mainpage">
        
        <div class="section-1">
            <h3>Account</h3>
            <hr style="width: 80%; margin-left: 20px; margin-top: 20px;">
            <div class="links">
                <div class="elements">
                    <div><img src="../images/Home.png" alt=""></div>
                    <a href="/home2">Home</a>
                </div>
                <div style="position: relative;" class="elements">
                    <div><img src="../images/9977091-removebg-preview.png" alt=""></div>
                    <a href="../personalInfo.html">Personal Info</a>
                    <img style="width: 10px; height: 10px; -webkit-transform: scaleX(-1); transform: scaleX(-1); position: absolute; top: 6px; right: 10px;" src="../images/1200px-Red_Arrow_Left.svg-removebg-preview.png" alt="">
                </div>
                <div class="elements">
                    <div><img src="../images/Password.png" alt=""></div>
                    <a href="../password/password.html">Password Info</a>
                </div>
                <div class="elements">
                    <div><img src="../images/Memebership (1).png" alt=""></div>
                    <a href="../membership/membership.html">Memebership Details</a>
                </div>
                <div class="elements">
                    <div><img src="../images/Logout.png" alt=""></div>
                    <a href="/home">LogOut</a>
                </div>
            </div>
        </div>

        <div class="section-2">
            
            <h1>Edit Your Details</h1>

            <hr style="width: 90%; margin-left: 22px; margin-top: 20px; color: grey; opacity: 0.5;">

            <div>
                <form class="form" action="../personalInfo.html">
                    <div style="margin-left: 35px; margin-top: 20px;">
                        <h3>Account Information</h3>
                        <div style="display: flex; flex-direction: row; margin-top: 20px; margin-left: 0px;">
                            <div class="box" style="margin-left: 10px; margin-top: 0px;">
                                <label for="firstName">First Name</label>
                                <input type="text" name="firstName" id="firstName" placeholder="First Name">
                            </div>
                            <div class="box" style="margin-top: 0px; margin-left: 250px;">
                                <label for="lastName">Last Name</label>
                                <input type="text" name="lastName" id="lastName" placeholder="Last Name">
                            </div>
                        </div>
                        <div>
                            <div style="display: flex; flex-direction: row; margin-top: -20px; margin-left: -20px;">
                                <div class="box" style="margin-left: 12px; margin-top: 0px;">
                                    <label for="gender">Gender</label>
                                    <input type="text" name="gender" id="gender" placeholder="Gender">
                                </div>
                                <div class="box" style="margin-top: 0px; margin-left: 250px;">
                                    <label for="age">Age</label>
                                    <input type="number" name="age" id="age" placeholder="Age">
                                </div>
                        </div>
                    </div>
                    
                    <hr style="width: 90%; margin-left: -10px; margin-top: 10px; color: grey; opacity: 0.5;">
                    
                    <div style="margin-left: 10px; margin-top: 20px;">
                        <h3 style="margin-left: -5px;">Physical Address</h3>
                        <div style=" margin-top: 20px; margin-left: -10px;">
                            <div style="display: flex; flex-direction: row;  margin: 0px;">
                                <div class="box" style="margin-left: 10px; margin-top: 0px;">
                                    <label for="countryName">Country</label>
                                    <input type="text" name="countryName" id="countryName" value="India" disabled>
                                </div>
                                <div class="box" style="margin-top: 0px; margin-left: 250px;">
                                    <label for="cityName">State</label>
                                    <input type="text" name="cityName" id="cityName" value="Uttar Pradesh" disabled>
                                </div>
                            </div>
                            <div style="display: flex; flex-direction: row; margin-left: 0px; margin-top: -10px;">
                                <div class="box" style="margin-top: 0px; margin-left: 10px;">
                                    <label for="stateName">City</label>
                                    <input type="text" name="stateName" id="stateName" value="Mathura" disabled>
                                </div>
                                <div class="box" style="margin-top: 2px; margin-left: 250px;">
                                    <label for="address">Address</label>
                                    <input type="text" name="address" id="address" value="Krsihna Nagar" disabled>
                                </div>
                            </div>
                            <div class="box" style="margin-left: 10px; margin-top: -25px;">
                                <label for="pincode">PinCode</label>
                                <input type="number" name="pincode" id="pincode" value="123456" disabled>
                            </div>
                        </div>
                    </div>

                    <button>Submit</button>
                    
                </form>
            </div>

        </div>
    </div>

</div>